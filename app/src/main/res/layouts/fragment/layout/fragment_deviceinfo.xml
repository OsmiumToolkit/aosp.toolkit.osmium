<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/generalRoot"
            app:title="@string/deviceinfo_general_title" />
        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayRoot"
            app:title="@string/deviceinfo_display_title"/>
        
        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/androidRoot"
            app:title="@string/deviceinfo_android_title" />

        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linuxRoot"
            app:title="@string/deviceinfo_linux_title"/>

        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/socRoot"
            app:title="@string/deviceinfo_soc_title" />
        
        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ramRoot"
            app:title="@string/deviceinfo_ram_title" />
        
        <aosp.toolkit.perseus.view.DeviceInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jvmRoot"
            app:title="@string/deviceinfo_jvm_title" />
    
    </LinearLayout >
</ScrollView >